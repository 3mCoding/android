<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:orientation="vertical">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/question_title"
        android:text="오늘의 문제 - 13번"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrowProblem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down_black" />
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문제" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtProblem"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이중 for문을 이용하여\n다음과 같이 출력하고자 한다.\n빈칸에 알맞은 내용을 넣어라."
        android:textColor="#000"
        android:textSize="15sp" />
    <LinearLayout
        android:background="#fff"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrowResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down_black" />
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출력 내용" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtResult"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*\n**\n***\n****\n*****"
        android:textColor="#000"
        android:textSize="15sp" />
    <LinearLayout
        android:background="#fff"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/arrowAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down_black" />
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답안 작성" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtAnswer"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="java 코드  ~~~~"
        android:textColor="#000"
        android:textSize="15sp" />
</LinearLayout>