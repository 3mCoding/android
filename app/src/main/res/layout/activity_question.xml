<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:padding="15dp"
                android:id="@+id/txtTitle"
                android:text="오늘의 문제 - 13번"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:visibility="invisible"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/problem_check" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginRight="10dp"
                android:id="@+id/arrowQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_right" />
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문제" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/txtProblem"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이중 for문을 이용하여\n다음과 같이 출력하고자 한다.\n빈칸에 알맞은 내용을 넣어라."
            android:textColor="#000"
            android:textSize="15sp" />
        <LinearLayout
            android:background="#fff"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginRight="10dp"
                android:id="@+id/arrowResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_right" />
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출력 내용" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/txtResult"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*\n**\n***\n****\n*****"
            android:textColor="#000"
            android:textSize="15sp" />
        <RelativeLayout
            android:background="#fff"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_margin="10dp"
                android:id="@+id/arrowAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_right" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/arrowAnswer"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코드" />
            <Spinner
                android:elevation="0dp"
                android:spinnerMode="dropdown"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/spinner_background"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/language"
                android:entries="@array/language"
                android:popupBackground="#EBEBEB"
                android:dropDownWidth="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtAnswer"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="java 코드  ~~~~"
            android:textColor="#000"
            android:textSize="15sp" />
        <RelativeLayout
            android:background="#fff"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_margin="10dp"
                android:id="@+id/arrowSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_right" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/arrowSubmit"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답안 작성" />
        </RelativeLayout>
        <ListView
            android:dividerHeight="0px"
            android:divider="#FFFFFF"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_submit" />
    </LinearLayout>
    <Button
        android:id="@+id/btnSubmit"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@drawable/button_main_problem"
        android:text="제출하기"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"/>
    <Button
        android:visibility="gone"
        android:id="@+id/btnDescription"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#6E9172"
        android:textStyle="bold"
        android:text="설명 보기"
        android:background="@drawable/button_description"
        android:elevation="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>